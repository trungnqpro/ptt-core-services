    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "dev",
            "skipFiles": [
                "<node_internals>/**"
            ],           
            "runtimeExecutable": "nodemon",
            "restart": true,
            "program": "${workspaceFolder}/src/start.js",
            "env": {
                "NODE_ENV": "development",
            },
            "outputCapture": "std",
            "runtimeArgs": ["--trace-warnings"],
            "internalConsoleOptions": "neverOpen",
            // "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "prod",
            "skipFiles": [
                "<node_internals>/**"
            ],           
            "runtimeExecutable": "nodemon",
            "restart": true,
            "program": "${workspaceFolder}/src/start.js",
            "env": {
                "NODE_ENV": "production",
            },
            "outputCapture": "std",
            "runtimeArgs": ["--trace-warnings"],
            "internalConsoleOptions": "neverOpen",
            // "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "beta - preprod",
            "skipFiles": [
                "<node_internals>/**"
            ],           
            "runtimeExecutable": "nodemon",
            "restart": true,
            "program": "${workspaceFolder}/src/start.js",
            "env": {
                "NODE_ENV": "beta",
            },
            "outputCapture": "std",
            "runtimeArgs": ["--trace-warnings"],
            "internalConsoleOptions": "neverOpen",
            // "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "techcity - demo",
            "skipFiles": [
                "<node_internals>/**"
            ],           
            "runtimeExecutable": "nodemon",
            "restart": true,
            "program": "${workspaceFolder}/src/start.js",
            "env": {
                "NODE_ENV": "techcity-demo",
            },
            "outputCapture": "std",
            "runtimeArgs": ["--trace-warnings"],
            "internalConsoleOptions": "neverOpen",
            // "console": "integratedTerminal",
        }
    ]
}